<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="16dp">
    <TextView android:id="@+id/tv_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Edge Detector (skeleton)"
        android:textSize="18sp"/>
    <Button android:id="@+id/btn_toggle" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Toggle Mode"/>
    <TextView android:id="@+id/tv_info" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="See README for setup"/>
</LinearLayout>
